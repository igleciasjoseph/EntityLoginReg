@model LogUser
<nav class="navbar navbar-fluid navbar-expand-lg navbar-dark bg-dark mb-5">
    <a class="navbar-brand ml-5 lead" href="#"><big>Login Below</big></a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link text-white" href="/">Home/Register</a>
            </li>
        </ul>
    </div>
</nav>
<div class="container">
    <div class="col-12 d-flex justify-content-center">
        <div class="card bg-transparent text-dark p-5">
            <h1 class="display-4 mb-5">Login</h1>
            <form action="/login" method="POST">
                <div class="form-group">
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input type="email" class="form-control" id="username" name="Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        <input type="password" class="form-control" id="Password" name="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <input type="submit" class="btn btn-primary mb-2" value="Login">
                </div>
            </form>
        </div>
    </div>
</div>
